<h1>Liste de taches</h1>

<ol>
  <% @tasks.each do |task| %>

  <li><input type="checkbox" id="completed" name="task[completed]"
    <% if task.completed%>
     checked
    <% end %> ><%= link_to task.title, task_path(task) %>
    <%= link_to " Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ol>
<br>
<h2><%= link_to "Ajouter une tache", new_task_path %></h2>
